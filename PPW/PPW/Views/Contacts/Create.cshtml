@model PPW.Models.Contact

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PuserId" class="control-label">Su usuario: </label>
                <select asp-for="PuserId" class="form-control" asp-items="@ViewBag.PrimerUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SuserId" class="control-label">Usuario por asociar: </label>
                <select asp-for="SuserId" class="form-control" asp-items="@ViewBag.SegundoUserId"></select>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Chats" asp-route-id="@ViewBag.ID">Back to Chat</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model PPW.Models.User

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Con este comando se manda a llamar a los archivos .js y .css que contiene todo el contenido de Bootstrap (No es necesario el instalar algo adicional)-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <!--Con este comando se manda a llamar a los iconos de Bootstrap (Sin la necesidad de instalarlos)-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/style.css" />
    <title> Login </title>
</head>
<body>
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your login and password!</p>
                            <form asp-action="main">
                                <div class="form-outline form-white mb-4">
                                    <input type="text" asp-for="Username" id="Username" class="form-control form-control-lg" />
                                    <label class="form-label" asp-for="Username">User</label>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input type="password" asp-for="Password" id="password" class="form-control form-control-lg" />
                                    <label class="form-label" asp-for="Password">Password</label>
                                </div>
                                <input type="submit" value="Submit" class="btn btn-outline-light btn-lg px-5" />
                            </form>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="Username" class="text-white-50">Forgot password?</a>
                        </div>
                        <div>
                            <p class="mb-0">
                                Don't have an account?
                            </p>
                                <form asp-action="Create">
                                    <input class="btn btn-outline-light btn-lg px-5" type="submit" value="Create" />
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</body>
</html>


